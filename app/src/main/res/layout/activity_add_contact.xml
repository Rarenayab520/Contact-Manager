<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F7">

    <!-- ✅ Fixed Top Bar -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:background="#F2F2F7"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btnCancel"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Contact"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/btnSave"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp" />
    </RelativeLayout>

    <!-- ✅ Scrollable Content Starts -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
        <!-- Profile Image -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_contact"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:background="@drawable/circle_bg" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddPhoto"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="Add Photo"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textAllCaps="false"
            app:cornerRadius="20dp"
            app:backgroundTint="@color/textSecondary" />

        <!-- Favorite Toggle -->
        <ImageView
            android:id="@+id/favoriteToggle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_outline_heart"
            android:layout_marginTop="12dp" />

        <!-- Name Inputs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_white_box"
            android:elevation="2dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:clipToOutline="true">

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First name"
                android:background="@null"
                android:padding="12dp"
                android:textColor="#000" />

            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD" />

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last name"
                android:background="@null"
                android:padding="12dp"
                android:textColor="#000" />

            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:background="@null"
                android:padding="12dp"
                android:textColor="#000" />
        </LinearLayout>

        <!-- Add Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_white_bg"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add2"
                android:contentDescription="Add icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add email"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_white_bg"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add2"
                android:contentDescription="Add icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add pronouns"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_white_bg"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <!-- Left text -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ringtone"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_weight="1" />

            <!-- Center text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textColor="#007AFF"
                android:textSize="16sp"
                android:layout_marginEnd="200dp" />

            <!-- Right icon -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Arrow"
                app:tint="#C0C0C0" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_white_bg"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <!-- Left text -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TextTone"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_weight="1" />

            <!-- Center text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textColor="#007AFF"
                android:textSize="16sp"
                android:layout_marginEnd="200dp" />

            <!-- Right icon -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Arrow"
                app:tint="#C0C0C0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_white_bg"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add url"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginStart="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_white_bg"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add address"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginStart="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_white_bg"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add birthday"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginStart="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_white_bg"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add date"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginStart="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_white_bg"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add related name"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginStart="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_white_bg"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add social profile"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginStart="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_white_bg"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add instant message"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginStart="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_white_bg"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textSize="16sp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_white_bg"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add verification code"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginStart="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_white_bg"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add field"
                android:textSize="18sp"
                android:textColor="@color/ios_blue"
                android:layout_marginStart="12dp" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
