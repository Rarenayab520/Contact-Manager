<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Cancel (X) Button -->
    <ImageView
        android:id="@+id/btnCancel"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Save (Checkmark) Button -->
    <ImageView
        android:id="@+id/btnSave"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:focusable="true" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Contact"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnCancel"
        app:layout_constraintEnd_toStartOf="@id/btnSave"
        app:layout_constraintHorizontal_bias="0.5"/>

    <!-- ScrollView containing form -->
    <ScrollView
        android:id="@+id/scrollForm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_contact"
                android:background="@drawable/circle_bg"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:layout_marginTop="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Add Photo"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:layout_marginTop="8dp"
                app:backgroundTint="@color/textSecondary"
                app:cornerRadius="24dp"
                app:iconPadding="8dp"/>

            <!-- Name Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_marginTop="24dp"
                android:elevation="1dp">

                <EditText
                    android:id="@+id/etFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First name"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:padding="10dp"/>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DDDDDD"/>

                <EditText
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last name"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:padding="10dp"/>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DDDDDD"/>

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:padding="10dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/favoriteToggle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_outline_heart"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:contentDescription="Toggle Favorite"
                android:clickable="true"
                android:focusable="true" />

            <!-- Add Info Buttons (phone, email, etc.) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:background="@android:color/white"
                android:padding="8dp"
                android:elevation="1dp">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  +  Add phone"
                    android:textColor="@color/ios_blue"
                    android:textAllCaps="false"
                    android:layout_marginBottom="8dp"
                    app:backgroundTint="@color/gray_200"
                    app:cornerRadius="24dp"
                    app:iconPadding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  +  Add email"
                    android:textColor="#0A8A00"
                    android:textAllCaps="false"
                    android:layout_marginBottom="8dp"
                    app:backgroundTint="@color/gray_200"
                    app:cornerRadius="24dp"
                    app:iconPadding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  +  Add pronouns"
                    android:textColor="#0A8A00"
                    android:textAllCaps="false"
                    android:layout_marginBottom="8dp"
                    app:backgroundTint="@color/gray_200"
                    app:cornerRadius="24dp"
                    app:iconPadding="8dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
