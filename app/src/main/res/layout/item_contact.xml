<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/light_text"
        android:padding="12dp">

        <!-- Profile ImageView -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_bg"
            android:visibility="gone" />

        <!-- Initial circle if no image -->
        <TextView
            android:id="@+id/initial_circle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="A"
            android:textSize="18sp"
            android:textColor="@color/cardDark"
            android:background="@drawable/circle_bg"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <!-- Contact Name -->
        <TextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_toEndOf="@id/initial_circle"
            android:layout_marginStart="12dp"
            android:layout_alignTop="@id/initial_circle" />

        <!-- Contact Type -->
        <TextView
            android:id="@+id/contact_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regular"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_toEndOf="@id/initial_circle"
            android:layout_marginStart="12dp"
            android:layout_below="@id/contact_name" />

        <!-- Favorite Star -->
        <ImageView
            android:id="@+id/favorite_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_heart_filled"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
